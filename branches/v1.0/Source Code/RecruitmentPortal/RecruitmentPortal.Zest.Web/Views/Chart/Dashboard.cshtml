                        <span data-value="9" class="counterup"> @ViewBag.Count</span>@*<small>Count</small>*@
                    </div>
                    @*<div class="devider"></div>*@
                    @*<div class="block"><span data-value="" class="counterup">0</span><small>Offered</small></div>*@

                </div>
            </div>
            <div class="visual pull-right">
                <i class="fa fa-user-plus"></i>
            </div>
        </div>
    </div>

    <div class="col-sm-5" style="width:25%">
        <div class="count-box-defult count-box-lightgreen">
            <div class="detail pull-left detail-block">
                <div class="desc">Designation Wise Offered</div>
                <div class="number">
                    <div class="block checkSessionTimeout confirmation-thismonth cursor-pointer">
