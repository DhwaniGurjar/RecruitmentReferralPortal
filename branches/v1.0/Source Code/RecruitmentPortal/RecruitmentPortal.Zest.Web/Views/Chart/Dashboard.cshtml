                        <span data-value="9" class="counterup">@ViewBag.ReferralCount</span>@*<small>Count</small>*@
                    </div>
                    @*<div class="devider"></div>*@
                    @*<div class="block"><span data-value="" class="counterup">0</span><small>Offered</small></div>*@

                </div>
            </div>
            <div class="visual pull-right">
                <i class="fa fa-user-plus"></i>
            </div>
        </div>
    </div>
    <div class="col-md-10" style="width:100%">
        <div class="panel panel-default dash-chart-panel filter-area dash-row-3" style="width:50%; height: 55%; float:left;">
            <div class="panel-title " style="margin-left:10px; margin-top:20px">
                <i class="fa fa-pie-chart"></i><span class="employeeSatus cursor-pointer" title="click to view number of candidates" style="margin-left:10px" data-statuscode="0">Job Wise Candidate Count</span>
                <h4 class="pull-right no-margin"><span class="hidden-xs hidden-sm label label-info"></span> </h4>
                <div class="clearfix">

                </div>
            </div> <canvas id="Piecanvas"></canvas>
        </div>
        <div class="panel panel-default dash-chart-panel filter-area dash-row-3" style="width:49%; height: 55%; float:right;">
            <div class="panel-title " style="margin-left:10px; margin-top:20px">
