@model IEnumerable<RecruitmentPortal.Zest.Common.ServiceModels.JobDescriptionResult>
@{
    ViewBag.Title = "JobList";
}

@section scripts{
    <script>
    jQuery(document).ready(function () {

        @*@if (Session["export"] == null || Session["export"].ToString() == "")
        {
         <text>
            modifyDisplay("downloadexcel", false);
        </text>
        }*@
        jQuery('#MainContent_gvEmp').dataTable();
    });
    </script>
}


<div class="page-header">
    <div class="row">
        <div class="col-sm-6" style="padding-bottom:10px">
            <div class="col-sm-12">
                <h1> View Requirements</h1>
            </div>
        </div>
    </div>
</div>

@*<div class="common-table-style">*@
    @*<div class="table-responsive">*@
        <table class="table table-striped table-bordered" style="width:100%" cellspacing="0" align="center" id="MainContent_gvEmp">
            <thead>
                <tr>
                    <th align="center" scope="col" style="width:auto; color:blue; text-align:center">
                        <a href="">
                            @Html.DisplayNameFor(model => model.Job_Title)
                        </a>
                    </th>
                    <th align="center" scope="col" style="width:auto; text-align:center">
                        <a href="">
                            @Html.DisplayNameFor(model => model.Resource_Designation)
                        </a>
                    </th>

                    <th align="center" scope="col" style="width:auto; text-align:center">
                        <a href="">
                            @Html.DisplayNameFor(model => model.Job_Type)
                        </a>
                    </th>
                    <th align="center" scope="col" style="width:auto; text-align:center">
                        <a href="">
                            @Html.DisplayNameFor(model => model.Department)
                        </a>
                    </th>
                    <th align="center" scope="col" style="width:auto; text-align:center">
                        <a href="">
                            @Html.DisplayNameFor(model => model.Priority)
                        </a>
                    </th>
                    <th align="center" scope="col" style="width:auto; text-align:center">
                        <a href="">
                            @Html.DisplayNameFor(model => model.Status)
                        </a>
                    </th>
                    @if (Session["role"] != null && Session["role"].ToString() == "4")
                    {
                        <th align="center" scope="col" style="width:auto; text-align:center">
                            <a href="">
                                @Html.DisplayNameFor(model => model.Salary)
                            </a>
                        </th>
                    }

                    @if (Session["role"] != null && Session["role"].ToString() == "2")
                    {
                        <th align="center" scope="col" style="width:auto; text-align:center">
                            <a href="">
                                @Html.DisplayNameFor(model => model.Assign_Hr)
                            </a>
                        </th>
                    }
                    <th align="center" scope="col" style="width:auto; text-align:center">
                        <a href="">
                            Actions
                        </a>
                    </th>
                </tr>

            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Job_Title)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Resource_Designation)
                    </td>

                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Job_Type)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Priority)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    @if (Session["role"] != null && Session["role"].ToString() == "4")
                    {
                        <td align="center">
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>
                    }

                    @if (Session["role"] != null && Session["role"].ToString() == "2")
                    {
                        <td align="center">

                            @Html.DisplayFor(modelItem => item.Assign_Hr)

                        </td>
                    }
                    <td>

                        @if (Session["role"] != null && Session["role"].ToString() == "2" || Session["role"].ToString() == "3" || Session["role"].ToString() == "4")
                        {
                            <button type="button" id="btnSubmit" class="btn btn-success ic-save">
                                @Html.ActionLink("Edit", "Update", "Jobs", new { JD_Id = item.JD_Id }, new { @class = "btn", style = "color:white" })
                            </button>
                        }

                        <button type="button" id="btnCancel" class="btn btn-warning ic-reset">
                            @Html.ActionLink("Details", "SingleJobDescriptionList", "Jobs", new { JobId = item.JD_Id }, new { @class = "btn", style = "color:white" })
                        </button>

                        @if (Session["role"] != null && Session["role"].ToString() == "2" || Session["role"].ToString() == "3" || Session["role"].ToString() == "4")
                        {
                            <button type="button" id="btnCancel" class="btn btn-danger ic-danger">
                                @Html.ActionLink("Delete", "DeleteJobDescription", "Jobs", new { jobId = item.JD_Id }, new { @class = "btn", style = "color:white" })
                            </button>
                        }
                    </td>
                </tr>
            }
        </table>
    @*</div>*@
@*</div>*@